<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cColor"
    tools:context=".ActivityC">


    <Button
        android:id="@+id/openAFromCBtn"
        android:text="@string/openABtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/openDFromCBtn"
        android:text="@string/openDBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
         />

    <Button
        android:id="@+id/closeCBtn"
        android:text="@string/closeCBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"

        />

    <Button
        android:id="@+id/closeStackBtn"
        android:text="@string/closeStackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
         />


</LinearLayout>