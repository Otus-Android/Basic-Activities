<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c">

    <Button
        android:id="@+id/open_a"
        style="@style/ButtonStyle"
        android:text="@string/open_a"
        android:layout_marginTop="@dimen/margin_chain"
        android:layout_marginBottom="@dimen/margin_chain"
        app:layout_constraintBottom_toTopOf="@+id/open_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/open_d"
        style="@style/ButtonStyle"
        android:text="@string/open_d"
        android:layout_marginTop="@dimen/margin_chain"
        android:layout_marginBottom="@dimen/margin_chain"
        app:layout_constraintBottom_toTopOf="@+id/close_c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_a" />

    <Button
        android:id="@+id/close_c"
        style="@style/ButtonStyle"
        android:text="@string/close_c"
        android:layout_marginTop="@dimen/margin_chain"
        android:layout_marginBottom="@dimen/margin_chain"
        app:layout_constraintBottom_toTopOf="@+id/close_stack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_d" />

    <Button
        android:id="@+id/close_stack"
        style="@style/ButtonStyle"
        android:text="@string/close_stack"
        android:layout_marginTop="@dimen/margin_chain"
        android:layout_marginBottom="@dimen/margin_chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_c" />

</androidx.constraintlayout.widget.ConstraintLayout>