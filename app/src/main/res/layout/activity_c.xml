<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196f3"
    tools:context=".ActivityC">

    <Button
        android:id="@+id/button_c1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:text="Open ActivityA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_c2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Open ActivityD"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_c1"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_c3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:text="Close ActivityC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_c2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_c4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:text="Close Stack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_c3"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>