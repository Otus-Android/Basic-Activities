<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity3">

    <TextView
        android:id="@+id/textActivity3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/activity3"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/openActivityA"
        android:layout_width="@dimen/buttonLong"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textActivity3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:text="Open ActivityA"/>

    <Button
        android:id="@+id/openActivityD"
        android:layout_width="@dimen/buttonLong"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/openActivityA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:text="Open ActivityD"/>

    <Button
        android:id="@+id/closeActivityC"
        android:layout_width="@dimen/buttonLong"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/openActivityD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:text="Close ActivityC"/>

    <Button
        android:id="@+id/closeStack"
        android:layout_width="@dimen/buttonLong"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/closeActivityC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:text="Close Stack"/>



</androidx.constraintlayout.widget.ConstraintLayout>