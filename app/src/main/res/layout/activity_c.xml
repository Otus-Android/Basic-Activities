<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#2196f3"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/act_c_button_to_act_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Activity A"
            android:layout_margin="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="30dp"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <Button
            android:id="@+id/act_c_button_to_act_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Activity D"
            app:layout_constraintTop_toBottomOf="@id/act_c_button_to_act_a"
            android:layout_margin="50dp"
            android:padding="30dp"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <Button
            android:id="@+id/act_c_close_act_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close Activity C"
            android:layout_margin="50dp"
            app:layout_constraintTop_toBottomOf="@id/act_c_button_to_act_d"
            android:padding="30dp"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <Button
            android:id="@+id/act_c_close_stack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close Stack"
            android:layout_margin="50dp"
            app:layout_constraintTop_toBottomOf="@id/act_c_close_act_c"
            android:padding="30dp"
            android:layout_gravity="center_vertical|center_horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>
