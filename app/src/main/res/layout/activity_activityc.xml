<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196f3"
    tools:context=".ActivityC">



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/buttonc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GO TO ACTIVITY A"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <Button
        android:id="@+id/buttonc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GO TO ACTIVITY D"
        app:layout_constraintEnd_toEndOf="@+id/buttonc1"
        app:layout_constraintStart_toStartOf="@+id/buttonc1"
        app:layout_constraintTop_toBottomOf="@+id/buttonc1" />

    <Button
        android:id="@+id/buttonc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CLOSE ACTIVITY C"
        app:layout_constraintEnd_toEndOf="@+id/buttonc2"
        app:layout_constraintStart_toStartOf="@+id/buttonc2"
        app:layout_constraintTop_toBottomOf="@+id/buttonc2" />

    <Button
        android:id="@+id/buttonc4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CLOSE STACK"
        app:layout_constraintEnd_toEndOf="@+id/buttonc3"
        app:layout_constraintStart_toStartOf="@+id/buttonc3"
        app:layout_constraintTop_toBottomOf="@+id/buttonc3" />
</androidx.constraintlayout.widget.ConstraintLayout>